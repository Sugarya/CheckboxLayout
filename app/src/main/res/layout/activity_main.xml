<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sugary.customcheckboxlinearlayout.MainActivity"
    >


    <com.sugary.customcheckboxlinearlayout.CheckBoxLayout
        android:id="@+id/main_box_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:boxSrc="@drawable/big_star_selector"
        app:checkEnable="true"
        />

    <RadioGroup
        android:id="@+id/main_radio_group_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/main_radio_group_style_big"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="大星样式"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/main_radio_group_style_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小星样式"
            />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/main_radio_group_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >
        <RadioButton
            android:id="@+id/main_radio_group_select_enable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="enable select"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/main_radio_group_select_disable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="disable select"
            />
    </RadioGroup>


</LinearLayout>
